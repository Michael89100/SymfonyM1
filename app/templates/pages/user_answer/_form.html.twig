{% block content %}
    <h1>Create new sssUserAnswer</h1>

    <form method="post" action="{{ path('user_answer.new') }}">
        <table class="table">
            <thead>
                <tr>
                    <th>Question</th>
                    <th>Response</th>
                </tr>
            </thead>
            <tbody>
                {% for question in questions %}
                    <tr>
                        <td>{{ question.name }}</td>
                        <td>
                            <th>
                                {% if question.type == 'text' %}
                                    <input type="text" name="response" value="{{ form.response.vars.value }}" />
                                {% elseif question.type == 'textarea' %}
                                    <textarea name="response">{{ form.response.vars.value }}</textarea>
                                {% elseif question.type == 'checkbox' %}
                                    <input type="checkbox" name="response" {% if form.response.vars.value %}checked{% endif %} />
                                {% elseif question.type == 'radio' %}
                                    {% for option in question.options %}
                                        <input type="radio" name="response" value="{{ option }}" {% if form.response.vars.value == option %}checked{% endif %} /> {{ option }}
                                    {% endfor %}
                                {% endif %}
                            </th>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('user_answer.index') }}">back to list</a>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
{% endblock %}



